source 'https://rubygems.org'

ruby '2.0.0'

gem 'rails', '4.0.0'
gem 'json', '~> 1.7.7'
gem 'high_voltage', '~> 2.1.0'
gem 'font-awesome-rails'
gem 'rails_12factor'

group :development do
  gem 'sqlite3'
  gem 'pry-rails'
end

group :production do
  gem 'thin'
  gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
gem 'sass-rails',   '~> 4.0.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.0.3'
gem 'bourbon'
gem 'neat'

group :development, :test do
  gem 'rspec-rails', '~> 2.0'
  gem 'shoulda'
  gem 'pry'
  gem 'pry-debugger'
  gem 'better_errors'
  gem 'quiet_assets'
end

# jQuery
gem 'jquery-rails'
gem 'jquery-ui-rails'

# Kickstarter's awesome Amazon Flexible Payments gem
gem 'amazon_flex_pay'

# Configuration File
gem 'rails_config'
